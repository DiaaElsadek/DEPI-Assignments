@model EmpDeptViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<!-- self : practices -->
<form method="post" action="/Employee/SaveEdit/@Model.Id">
    <input type="hidden" id="Id" name="Id" value="@Model.Id" />
    <div>
        @* <label>Name</label> *@
        @Html.LabelFor(e=>e.Name)
       @*  <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control form" /> *@
        <!-- html helper : Loosly type -->
        @* @Html.TextBox("Name") *@
        <!-- html helper : strong type -->
        <!-- strong view -->
       @*  @Html.TextBoxFor(e => e.Name, new {@class= "form-control form"}) *@
        @Html.EditorFor(e => e.Name);
    </div>
    <div>
        <label>Address</label>
        <input type="text" id="Address" name="Address" value="@Model.Address" class="form-control form" />
    </div>
    <div>
        <label>Salary</label>
        <input type="number" id="Salary" name="Salary" value="@Model.Salary" class="form-control form" />
    </div>
    <div>
        <label>Job Title</label>
        <input type="text" id="Title" name="Title" value="@Model.Title" class="form-control form" />
    </div>
    <div>
        <label>Department</label>
       @*  <input id="DepartmentId" name="DepartmentId" value="@Model.DepartmentId" class="form-control form" /> *@
        <select id="DepartmentId" name="DepartmentId" class="form-control form">
            @foreach (var item in Model.DeptList)
            {
                @if (item.Id == Model.DepartmentId)
                {
                    <option value="@item.Id" selected>@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>
                }
            }
        </select>
   </div>
    <input type="submit" value="Save" class="btn btn-success mt-3"/>
</form>
<!-- html tag -->
<!-- relative url >> self -->
<a href="/Employee/Index">Back</a>
<a href="/Employee/Details/@Model.Id">Details</a>
<!-- html helper -->
@Html.ActionLink("Back", "Index", "Employee");
@Html.ActionLink("Details", "Details", "Employee", new { id = @Model.Id });