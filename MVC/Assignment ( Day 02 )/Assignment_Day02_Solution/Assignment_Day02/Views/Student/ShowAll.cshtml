@model List<Student>

<h2>All Students</h2>
<table border="1">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Age</th>
        <th>Details</th>
    </tr>

    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Id</td>
            <td>@student.Name</td>
            <td>@student.Age</td>
            <td>
                @Html.ActionLink("View Details", "ShowDetails", new { id = student.Id })
            </td>
        </tr>
    }
</table>
